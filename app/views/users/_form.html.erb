<div class=content>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input">
          <div>
            <%= f.label :username, class: "label" %>
            <%=f.text_field  :username, class: "input", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="input">
          <div>
            <%= f.label :password, class: "label" %>
            <%=f.password_field  :password, class: "input", placeholder: "Choose a password", value: @user.password  %>
          </div>
        </div>

        <div class="input">
          <%= f.label "Is Admin?", class: "label" %>
          <%= f.check_box :is_admin, class: "input" %>
        </div>

        <div class="input">
          <%= f.label "Has Access?", class: "label" %>
          <%= f.check_box :has_access, class: "input" %>
        </div>

        <div>
          <%= f.submit "Update Account", class: "button" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
