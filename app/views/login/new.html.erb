<h1 class="text-center mt-4">Log In</h1>

<div class=container>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="firm-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%=f.email_field  :username, class: "form-control shadow rounded", placeholder: "Enter a user name" %>
          </div>
        </div>

        <div class="firm-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%=f.password_field  :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
          </div>
        </div>

        <div class="firm-group row justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
